{
  "env": {
    "browser": true,
    "es6": false
  },
  "plugins": [
    "compat"
  ],
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 5
  },
  "rules": {
    "compat/compat": "error",
    "indent": [
      "off",
      "always"
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "no-unused-vars": [
      "off",
      "always"
    ],
    "no-extra-boolean-cast": [
      "off",
      "always"
    ]
  }
}
